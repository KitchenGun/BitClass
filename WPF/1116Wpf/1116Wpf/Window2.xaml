<Window x:Class="_1116Wpf.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1116Wpf"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">
    <StackPanel>
        <!--컨텐츠가 자식컨텐츠를 갖는 방법 3가지-->
        <!--첫번째 방법
        1. 속성,버튼 크기(width부모 height자식)
        -->
        <Button Name="btn1" Content="Hello" Click="btn1_Click"/>
        <!--두번째 방법
        2. 요소
        -->
        <Button>
            Hello
        </Button>
        <!--세번째 방법
        3. 속성 요소
        -->
        <Button>
            <Button.Content>
                Hello
            </Button.Content>
        </Button>
        <!--컨텐츠가 다양한 자식컨텐츠를 갖는 방법-->
        <Button Click="Button_Click">
            <Ellipse Name="elp1" Fill="Blue" Width="150" Height="150"/>
        </Button>
        <!--컨텐츠가 하나이상의 컨텐츠를 갖고 싶다면 panel을 사용-->
        <Button Margin="10">
            <StackPanel>
                <TextBlock Text="test"/>
                <Button xmlns:aaa="clr-namespace:System;assembly=mscorlib">
                    <aaa:DateTime>2020/11/16</aaa:DateTime>
                </Button>
            </StackPanel>
        </Button>
    </StackPanel>
</Window>
