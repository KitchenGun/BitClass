<Window x:Class="_1117Wpf.Window_slidebar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1117Wpf"
        mc:Ignorable="d"
        Title="Window_slidebar" Height="450" Width="800">
    <StackPanel>
        <ProgressBar Name="prog" Maximum="100" Minimum="0" Height="25" Width="300" HorizontalAlignment="Left" Margin="20"/>
        <Slider Name="slider" Maximum="100" Minimum="0" Height="25" Width="300" HorizontalAlignment="Left" Margin="20" ValueChanged="Slider_ValueChanged" />
    </StackPanel>
</Window>
